<Application x:Class="PowerManagerWidget.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="App_Startup">
    <Application.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#E6121212"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#40FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0FFFFFF"/>
        <SolidColorBrush x:Key="GraphCpu" Color="#FF5DA5F7"/>
        <SolidColorBrush x:Key="GraphLoad" Color="#FF6FCF97"/>
        <SolidColorBrush x:Key="GraphTemp" Color="#FFF27B7B"/>
        <SolidColorBrush x:Key="GraphTempGreen" Color="#FF6FCF97"/>
        <SolidColorBrush x:Key="GraphTempYellow" Color="#FFE6C229"/>
        <SolidColorBrush x:Key="GraphTempOrange" Color="#FFE67E22"/>
        <SolidColorBrush x:Key="GraphTempRed" Color="#FFF27B7B"/>
        <SolidColorBrush x:Key="SchemeButtonBg" Color="#30FFFFFF"/>
        <SolidColorBrush x:Key="SchemeButtonSelected" Color="#605DA5F7"/>
        <SolidColorBrush x:Key="RecommendedMin" Color="#FF6FCF97"/>
        <SolidColorBrush x:Key="RecommendedBalanced" Color="#FFE6C229"/>
        <SolidColorBrush x:Key="RecommendedMax" Color="#FFF27B7B"/>
        <SolidColorBrush x:Key="GridLine" Color="#25FFFFFF"/>

        <Style x:Key="SchemeRadioStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Br" Width="32" Height="32" CornerRadius="16" Background="{StaticResource SchemeButtonBg}"
                                BorderBrush="{StaticResource PanelBorder}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Br" Property="Background" Value="{StaticResource SchemeButtonSelected}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
